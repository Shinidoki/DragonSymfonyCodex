{% extends 'admin/layout.html.twig' %}

{% block admin_title %}Worlds{% endblock %}

{% block admin_body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Worlds</h1>
    </div>

    <div class="row g-3">
        <div class="col-12 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-header">Create world</div>
                <div class="card-body">
                    {{ form_start(createForm, { action: path('admin_world_create'), method: 'POST' }) }}
                    {{ form_row(createForm.seed) }}
                    <button class="btn btn-primary" type="submit">Create</button>
                    {{ form_end(createForm) }}
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-7">
            <div class="card shadow-sm">
                <div class="card-header">Existing worlds</div>
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle mb-0">
                        <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Seed</th>
                            <th>Planet</th>
                            <th>Day</th>
                            <th>Created</th>
                            <th>Characters</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for world in worlds %}
                            <tr>
                                <td><a class="text-decoration-none"
                                       href="{{ path('admin_world_show', { id: world.id }) }}">#{{ world.id }}</a></td>
                                <td>{{ world.seed }}</td>
                                <td>{{ world.planetName }}</td>
                                <td>{{ world.currentDay }}</td>
                                <td>{{ world.createdAt|date('Y-m-d H:i') }}</td>
                                <td>{{ world.characters|length }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-secondary text-center py-4">No worlds yet.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

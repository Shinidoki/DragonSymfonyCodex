{% extends 'admin/layout.html.twig' %}

{% block admin_title %}World #{{ world.id }}{% endblock %}

{% block admin_body %}
    <div class="d-flex justify-content-between align-items-start mb-4">
        <div>
            <h1 class="mb-1">World #{{ world.id }}</h1>
            <div class="text-secondary">
                Seed: <strong>{{ world.seed }}</strong>
                · Planet: <strong>{{ world.planetName }}</strong>
                · Day: <strong>{{ world.currentDay }}</strong>
                · Map: <strong>{{ world.width }}×{{ world.height }}</strong>
            </div>
        </div>
        <div class="ms-3">
            <a class="btn btn-outline-secondary btn-sm" href="{{ path('admin_world_index') }}">Back</a>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-12 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header">Advance simulation</div>
                <div class="card-body">
                    {{ form_start(advanceForm, { action: path('admin_world_advance', { id: world.id }), method: 'POST' }) }}
                    {{ form_row(advanceForm.days) }}
                    <button class="btn btn-primary" type="submit">Advance</button>
                    {{ form_end(advanceForm) }}
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header">Characters</div>
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle mb-0">
                        <thead class="table-light">
                        <tr>
                            {% set currentSort = sort|default('id') %}
                            {% set currentDir = dir|default('asc') %}
                            {% set flipDir = currentDir == 'asc' ? 'desc' : 'asc' %}

                            <th>
                                <a class="text-decoration-none"
                                   href="{{ path('admin_world_show', { id: world.id, sort: 'id', dir: currentSort == 'id' ? flipDir : 'asc' }) }}">ID</a>
                            </th>
                            <th>
                                <a class="text-decoration-none"
                                   href="{{ path('admin_world_show', { id: world.id, sort: 'name', dir: currentSort == 'name' ? flipDir : 'asc' }) }}">Name</a>
                            </th>
                            <th>
                                <a class="text-decoration-none"
                                   href="{{ path('admin_world_show', { id: world.id, sort: 'race', dir: currentSort == 'race' ? flipDir : 'asc' }) }}">Race</a>
                            </th>
                            <th>
                                <a class="text-decoration-none"
                                   href="{{ path('admin_world_show', { id: world.id, sort: 'tileX', dir: currentSort == 'tileX' ? flipDir : 'asc' }) }}">X</a>
                                /
                                <a class="text-decoration-none"
                                   href="{{ path('admin_world_show', { id: world.id, sort: 'tileY', dir: currentSort == 'tileY' ? flipDir : 'asc' }) }}">Y</a>
                            </th>
                            <th>
                                <a class="text-decoration-none"
                                   href="{{ path('admin_world_show', { id: world.id, sort: 'money', dir: currentSort == 'money' ? flipDir : 'asc' }) }}">Money</a>
                            </th>
                            <th>
                                <a class="text-decoration-none"
                                   href="{{ path('admin_world_show', { id: world.id, sort: 'powerlevel', dir: currentSort == 'powerlevel' ? flipDir : 'desc' }) }}">Powerlevel</a>
                            </th>
                            <th>
                                <a class="text-decoration-none"
                                   href="{{ path('admin_world_show', { id: world.id, sort: 'job', dir: currentSort == 'job' ? flipDir : 'asc' }) }}">Job</a>
                            </th>
                            <th>
                                <a class="text-decoration-none"
                                   href="{{ path('admin_world_show', { id: world.id, sort: 'archetype', dir: currentSort == 'archetype' ? flipDir : 'asc' }) }}">Archetype</a>
                            </th>
                            <th>
                                <a class="text-decoration-none"
                                   href="{{ path('admin_world_show', { id: world.id, sort: 'strength', dir: currentSort == 'strength' ? flipDir : 'desc' }) }}">STR</a>
                            </th>
                            <th>
                                <a class="text-decoration-none"
                                   href="{{ path('admin_world_show', { id: world.id, sort: 'kiControl', dir: currentSort == 'kiControl' ? flipDir : 'desc' }) }}">KI
                                    Control</a></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for character in characters %}
                            <tr>
                                <td>
                                    <a class="text-decoration-none"
                                       href="{{ path('admin_character_show', { id: character.id }) }}">#{{ character.id }}</a>
                                </td>
                                <td>{{ character.name }}</td>
                                <td>{{ character.race.value }}</td>
                                <td>({{ character.tileX }}, {{ character.tileY }})</td>
                                <td>${{ character.money }}</td>
                                <td>{{ powerLevels[character.id]|default(0) }}</td>
                                <td>{{ jobLabels[character.id]|default('unemployed') }}</td>
                                <td>{{ archetypes[character.id]|default('') }}</td>
                                <td>{{ stat_tier_label(character.strength) }} ({{ character.strength }})</td>
                                <td>{{ stat_tier_label(character.kiControl) }} ({{ character.kiControl }})</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="10" class="text-secondary text-center py-4">No characters in this world
                                    yet.
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
